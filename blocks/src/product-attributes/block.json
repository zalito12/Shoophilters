{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "shoophilters/product-attributes",
	"version": "0.1.0",
	"title": "Shoophilters: Product attributes filter",
	"category": "shoophilters",
	"icon": "grid-view",
	"description": "Add attribute filters for your shop",
	"keywords": [ "Shoophilters", "WooCommerce" ],
	"supports": {
		"html": false
	},
	"textdomain": "shoophilters",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"attributes": {
		"showTotal": {
			"enum": ["never", "always", "current"],
			"default": "never"
		},
		"rowSize": {
			"type": "string",
			"default": "3"
		},
		"showEmpty": {
			"type": "boolean",
			"default": false
		},
		"taxonomy": {
			"type": "string",
			"default": ""
		},
		"filtering": {
			"type": "object",
			"default": {
				"navigation": "standard",
				"group": "default"
			}
		}
	}
}
