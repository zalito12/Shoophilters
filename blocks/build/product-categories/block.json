{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "shoophilters/product-categories",
  "version": "0.1.0",
  "title": "Shoophilters: Product Categories",
  "category": "shoophilters",
  "icon": "list-view",
  "description": "Add product category selector to your shop.",
  "keywords": [
    "Shoophilters",
    "WooCommerce"
  ],
  "supports": {
    "html": false
  },
  "textdomain": "shoophilters",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php",
  "attributes": {
    "showTotal": {
      "enum": [
        "never",
        "always",
        "current"
      ],
      "default": "never"
    },
    "showEmpty": {
      "type": "boolean",
      "default": false
    },
    "showChildren": {
      "type": "boolean",
      "default": false
    },
    "filtering": {
      "type": "object",
      "default": {
        "navigation": "standard",
        "group": "default"
      }
    }
  }
}